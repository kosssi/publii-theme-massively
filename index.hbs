{{> head}}
{{> top}}
<main id="main">
   {{#is "index"}}
      {{#if @renderer.isFirstPage}}
         {{#if @config.custom.introText}}
            <div id="intro">
               {{{@config.custom.introText}}}

               <ul class="actions">
                  <li>
                     <a href="#header" class="button icon solid solo fa-arrow-down scrolly">{{ translate 'partials.top.continue' }}</a>
                  </li>
               </ul>
            </div>
         {{/if}}
      {{/if}}
   {{/is}}
   {{#if @renderer.isFirstPage}}
      {{#featuredPosts}}
         <article class="post featured">
            <header class="major">
               {{#if @config.custom.feedDate}}
                  <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}" class="date">
                     {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                        {{date createdAt @config.custom.formatDate}}
                     {{else}}
                        {{date createdAt @config.custom.formatDateCustom}}
                     {{/checkIf}}
                  </time>
               {{/if}}
               <h2>
                  <a href="{{url}}">{{title}}</a>
               </h2>
               {{#if hasCustomExcerpt}}
                  {{{ excerpt }}}
               {{else}}
                  <p>{{{ excerpt }}}</p>
               {{/if}}
            </header>

            {{#if @config.custom.feedFeaturedImage}}
               {{#featuredImage}}
                  {{#if url}}
                     <a href="{{../url}}" class="image main">
                        <img
                           src="{{url}}"
                           {{#if @config.site.responsiveImages}}
                           {{responsiveImageAttributes 'featuredImage' srcset.post sizes.post}}
                           {{/if}}
                           {{ lazyload "lazy" }}
                           height="{{height}}"
                           width="{{width}}"
                           alt="{{alt}}">
                     </a>
                  {{/if}}
               {{/featuredImage}}
            {{/if}}

            {{#if @config.custom.feedReadMore}}
               <ul class="actions special">
                  <li>
                     <a href="{{url}}" class="button large">{{ translate 'post.readMore' }}</a>
                  </li>
               </ul>
            {{/if}}

         </article>
      {{/featuredPosts}}
   {{/if}}

   <section class="posts">
      {{#each posts}}
         <article>
            <header>
               {{#if @config.custom.feedDate}}
                  <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}" class="date">
                     {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                        {{date createdAt @config.custom.formatDate}}
                     {{else}}
                        {{date createdAt @config.custom.formatDateCustom}}
                     {{/checkIf}}
                  </time>
               {{/if}}
               <h2>
                  <a href="{{url}}">{{title}}</a>
               </h2>
            </header>

            {{#if @config.custom.feedFeaturedImage}}
               {{#featuredImage}}
                  {{#if url}}
                     <a href="{{../url}}" class="image fit">
                        <img
                           src="{{url}}"
                           {{#if @config.site.responsiveImages}}
                           {{responsiveImageAttributes 'featuredImage' srcset.card sizes.card}}
                           {{/if}}
                           {{ lazyload "lazy" }}
                           height="{{height}}"
                           width="{{width}}"
                           alt="{{alt}}">
                     </a>
                  {{/if}}
               {{/featuredImage}}
            {{/if}}

            {{#if hasCustomExcerpt}}
               {{{ excerpt }}}
            {{else}}
               <p>{{{ excerpt }}}</p>
            {{/if}}

            {{#if @config.custom.feedReadMore}}
               <ul class="actions special">
                  <li>
                     <a href="{{url}}" class="button">{{ translate 'post.readMore' }}</a>
                  </li>
               </ul>
            {{/if}}
         
         </article>
      {{/each}}
   </section>

   {{#if @pagination}}
      <footer>
         {{> pagination}}
      </footer>
   {{/if}}
</main>

{{> footer}}
